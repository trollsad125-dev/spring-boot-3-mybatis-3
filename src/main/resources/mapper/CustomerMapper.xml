<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.practice.batismapper.CustomerMapper">
    <!--Select Customer by Id-->
    <select id="findByCustomerId" resultType="customer">
        SELECT
            *
        FROM customer
        WHERE id = #{id}
    </select>
    <!--INsert new Customer -->
    <insert id="createNewCustomer" useGeneratedKeys="true"  parameterType = "customer">
        INSERT INTO customer (
         name
        , email
        , phone_number
        ) VALUES (
        #{name}
        , #{email}
        , #{phoneNumber}
        )
    </insert>
    <!--Get all customer-->
    <select id="getAllCustomer" resultType="customer">
        SELECT
            /*id as id,
            name as name,
            email as email,
               phone_number as phoneNumber,
               loyalty as loyalty,
               create_at as createAt
               ,update_at as updateAt*/
        *
        FROM customer
    </select>
    <!--Update customer-->
    <update id="updateCustomer" parameterType="customer">
        UPDATE customer SET
        name = #{name},
        email = #{email},
        phone_number = #{phoneNumber},
        loyalty = #{loyalty}
        WHERE ID = #{id};
    </update>
    <!--Delete Customer-->
    <delete id="deleteById" parameterType="int">
        DELETE from customer WHERE ID = #{id};
    </delete>
    <resultMap id = "customerResult" type="CUSTOMER">
        <result property = "id" column = "id"/>
        <result property = "name" column = "name"/>
        <result property = "email" column = "email"/>
        <result property = "phoneNumber" column = "phone_number"/>
        <result property = "loyalty" column = "loyalty"/>
        <result property = "createAt" column = "create_at"/>
        <result property = "updateAt" column = "update_at"/>
    </resultMap>
</mapper>